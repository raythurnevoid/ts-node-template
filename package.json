{
	"name": "@raythurnevoid/ts-node-template",
	"version": "0.0.2",
	"description": "Template for TS Node projects",
	"scripts": {
		"env": "cross-env TS_NODE_PROJECT=\"tsconfig.json\"",
		"ts-node": "npm run env -- node -r ts-node/register -r tsconfig-paths/register --",
		"ts-node:inspect": "npm run ts-node -- --inspect --",
		"start": "npm run ts-node src/index.ts",
		"debug": "npm run ts-node:inspect src/index.ts",
		"clean-lib": "del-cli lib",
		"copy": "copyfiles ./src/**/*.* package.json tsconfig.json lib",
		"tsc": "tsc -p tsconfig.lib.json",
		"lib": "npm-run-all clean-lib copy tsc",
		"prepackage": "npm run lib",
		"package": "npm publish ./lib --"
	},
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/raythurnevoid/ts-node-template.git"
	},
	"author": "Ray Thurne <raythurnevoid@gmail.com>",
	"license": "ISC",
	"dependencies": {
		"dotenv": "^8.2.0",
		"copyfiles": "^2.4.1",
		"del-cli": "^3.0.1",
		"npm-run-all": "^4.1.5",
		"cross-env": "^7.0.3",
		"ts-node": "^9.1.1",
		"tsconfig-paths": "^3.9.0",
		"@types/node": "^14.14.41",
		"typescript": "^4.2.4"
	},
	"devDependencies": {}
}
