{
	"name": "@raythurnevoid/ts-node-template",
	"version": "2.0.0",
	"description": "Template for TS Node projects",
	"scripts": {
		"dev": "vite-node --script --watch ./src/index.ts",
		"dev:inspect": "node --inspect-brk ./node_modules/vite-node/vite-node.mjs --script --watch ./src/index.ts",
		"build": "vite build",
		"preview": "node ./dist/index.js",
		"lib": "npm run build && npm run lib:copy",
		"lib:copy": "copyfiles ./tsconfig.json ./package.json dist",
		"package": "npm run lib && npm publish ./dist --access public --"
	},
	"type": "module",
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/raythurnevoid/ts-node-template.git"
	},
	"author": "Ray Thurne",
	"license": "ISC",
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"typescript": "4.9.5",
		"vite-node": "^0.28.5",
		"copyfiles": "^2.4.1",
		"@types/node": "^18.13.0",
		"vite": "^4.1.1",
		"vite-plugin-dts": "^1.7.3"
	}
}
